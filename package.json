    "joi": "^17.7.0",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0",
    "sequelize-cli": "^6.6.0",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^4.6.0"
  }
